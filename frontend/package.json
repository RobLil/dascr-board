{
  "name": "dose",
  "version": "1.0.0",
  "description": "A go based darts scoretracking app",
  "license": "MIT",
  "author": {
    "name": "Patrick Hener",
    "email": "patrickhener@gmx.de",
    "url": "https://github.com/dascr/dascr-board"
  },
  "scripts": {
    "dev:only": "svelte-kit dev",
    "build:only": "svelte-kit build",
    "preview": "svelte-kit preview",
    "tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/tailwind-output.css -w",
    "tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/tailwind-output.css",
    "dev": "concurrently \"npm run dev:only\" \"npm run tailwind:watch\"",
    "build": "npm run tailwind:build && npm run build:only"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^1.0.0-next.43",
    "@sveltejs/adapter-static": "^1.0.0-next.17",
    "@sveltejs/kit": "next",
    "autoprefixer": "^10.3.3",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "svelte": "^3.34.0",
    "tailwindcss": "^2.2.8"
  },
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@zerodevx/svelte-toast": "^0.5.1",
    "crypto-js": "^4.1.1",
    "ky": "^0.28.5",
    "sirv-cli": "^1.0.14",
    "svelte-dragdroplist": "^1.1.1",
    "svelte-easy-crop": "^1.0.4"
  }
}
